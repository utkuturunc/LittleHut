{
  "name": "littlehut-server",
  "version": "1.0.0",
  "main": "/dist/server.js",
  "license": "MIT",
  "scripts": {
    "heroku-postbuild": "npm run build",
    "development": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint && npm run copy-static-assets",
    "start": "npm run forever",
    "forever": "node -r ./node_modules/dotenv/config ./node_modules/.bin/forever \"./dist/server.js\"",
    "serve": "node -r ./node_modules/dotenv/config ./node_modules/.bin/nodemon ./dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "test": "jest --forceExit",
    "build-ts": "./node_modules/.bin/tsc",
    "watch-ts": "./node_modules/.bin/tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "copy-static-assets": "node copyStaticAssets.js",
    "debug": "npm run build && npm run watch-debug",
    "serve-debug": "nodemon --inspect dist/server.js",
    "watch-debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve-debug\""
  },
  "devDependencies": {
    "@types/ajv": "^1.0.0",
    "@types/bcrypt": "^1.0.0",
    "@types/boom": "^4.3.7",
    "@types/convict": "^4.0.1",
    "@types/dotenv": "^4.0.1",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/kcors": "^2.2.1",
    "@types/knex": "^0.0.61",
    "@types/koa": "^2.0.39",
    "@types/koa-compress": "^2.0.7",
    "@types/koa-helmet": "^3.1.1",
    "@types/koa-mount": "^2.0.18",
    "@types/koa-passport": "^2.0.4",
    "@types/koa-router": "^7.0.23",
    "@types/koa-session": "^3.0.4",
    "@types/koa-static": "^3.0.1",
    "@types/lodash": "^4.14.74",
    "@types/passport-jwt": "^2.0.24",
    "@types/passport-local": "^1.0.31",
    "@types/qs": "^6.5.0",
    "@types/uuid": "^3.4.2",
    "concurrently": "^3.5.0",
    "jest": "^21.1.0",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "ts-jest": "^21.0.1",
    "tslint": "^5.7.0",
    "typescript": "^2.5.2"
  },
  "dependencies": {
    "@types/node-schedule": "^1.2.0",
    "ajv": "^5.2.2",
    "axios": "^0.16.2",
    "bcrypt": "^1.0.3",
    "boom": "^5.2.0",
    "convict": "^4.0.0",
    "dotenv": "^4.0.0",
    "forever": "^0.15.3",
    "jsonwebtoken": "^8.0.1",
    "kcors": "^2.2.1",
    "knex": "^0.13.0",
    "koa": "^2.3.0",
    "koa-better-body": "^3.0.4",
    "koa-compress": "^2.0.0",
    "koa-convert": "^1.2.0",
    "koa-etag": "^3.0.0",
    "koa-helmet": "^3.2.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^4.0.0",
    "koa-router": "^7.2.1",
    "koa-session": "^5.5.0",
    "koa-static": "^4.0.1",
    "koa2-swagger-ui": "^2.5.11",
    "lodash": "^4.17.4",
    "moment": "^2.18.1",
    "node-schedule": "^1.2.5",
    "objection": "^0.8.9",
    "passport-azure-ad-oauth2": "^0.0.4",
    "passport-jwt": "^3.0.0",
    "passport-local": "^1.0.0",
    "passport-oauth2": "^1.4.0",
    "pg": "^7.3.0",
    "qs": "^6.5.1",
    "source-map-support": "^0.4.18",
    "swagger-jsdoc": "^1.9.7",
    "uuid": "^3.1.0"
  },
  "engines": {
    "node": "^8.5.0",
    "yarn": "^1.0.0"
  },
  "jest": {
    "globals": {
      "__TS_CONFIG__": "tsconfig.json"
    },
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/test/**/*.test.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
